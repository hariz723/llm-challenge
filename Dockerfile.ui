# Use a Python base image
FROM python:3.13-slim

# Set the working directory in the container
WORKDIR /app

# Copy the pyproject.toml and uv.lock files for dependency installation
COPY pyproject.toml uv.lock ./

# Install uv and project dependencies
RUN pip install uv && \
    uv sync --frozen

# Copy the rest of the application code
COPY . .

# Set environment variables
ENV PYTHONPATH=/app
ENV STREAMLIT_SERVER_PORT=8501
EXPOSE 8501

# Use uv to run streamlit (ensures it uses the managed virtual env)
CMD ["uv", "run", "streamlit", "run", "src/ui/app.py", "--server.port=8501", "--server.address=0.0.0.0"]
